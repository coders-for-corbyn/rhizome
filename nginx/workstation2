upstream rhizome_upstream {
    ip_hash;
    server localhost:6001;
}

upstream rhizome_test_upstream {
    ip_hash;
    server localhost:6002;
}

server {
    listen 80;
    server_name dev.rhizome.com dev.rhizome.wearelightenclients.co.uk;
    root index.html;
    location / {
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_pass http://rhizome_upstream;
    }
}
server {
    listen 80;
    server_name test.rhizome.com;
    root index.html;
    location / {
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_pass http://rhizome_test_upstream;
    }
}
